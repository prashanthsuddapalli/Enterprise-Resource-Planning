<style>
    .attendance-card {
    background-color: #ffffff;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 20px;
    margin: 0 auto;
    margin-top: 50px;
    max-width: 600px;
}

.attendance-card h1 {
    text-align: center;
    margin-bottom: 20px;
}

.attendance-table {
    width: 100%;
    border-collapse: collapse;
}

.attendance-table th, .attendance-table td {
    padding: 10px;
    border-bottom: 1px solid #ccc;
    text-align: center;
}

.attendance-table th {
    background-color: #f2f2f2;
}

.attendance-table td input {
    width: 50px;
    padding: 5px;
    text-align: center;
}

.mark-attendance {
    display: block;
    width: 100%;
    padding: 10px;
    background-color: #007bff;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.mark-attendance:hover {
    background-color: #0056b3;
}

</style>


<%- include('../public/teacher_page/teacher_header.ejs') %>

<div class="attendance-card">
    <% if(locals.student_info.length){%>
        <form action="/add_attendance" method="POST">
            <h1>Edit Attendance</h1>
            <table class="attendance-table"> 
                <tr>
                    <td>Student ID</td> <!-- Student ID -->
                    <td>Student Name</td> <!-- Student name -->
                    <td>Telugu</td> <!-- telugu -->
                    <td>Hindi</td> <!-- hindi -->
                    <td>English</td> <!-- english -->
                </tr>
                <% for( let i = 0; i < student_info.length; i++ ) { %>
                <tr>
                    <td class="ID"><%=student_info[i].student_id %></td>
                    <input type="hidden" name="student_id_<%= i %>" value="<%=student_info[i].student_id %>">
                    <td class="name"><%=student_info[i].student_name %></td>
                    <td class="telugu"><input type="number" min="0" max="1" name="tel_<%= i %>" required></td>
                    <td class="hindi"><input type="number" min="0" max="1" name="hin_<%= i %>" required></td>
                    <td class="english"><input type="number" min="0" max="1" name="eng_<%= i %>" required></td>
                </tr>
                <% } %>
            </table>
            <br>
            <button type="submit" class="mark-attendance">Submit</button>
        </form>
    <% }  else {%>
        <p>No students were registered in this class</p>
    <%}%>
</div>


<%- include('../public/teacher_page/teacher_footer.ejs') %>