<%- include('../public/teacher_page/teacher_header.ejs') %>
<br><br><br>

<div class="unit-test-form-card">
    <h1>Student Unit Test Marks</h1>
    <form action="/student_unitTest_Marks" method="POST">
        <table class="unit-test-form-table"> 
            <tr>
                <td>Student ID</td> <!-- Student ID -->
                <td>Telugu</td> <!-- telugu -->
                <td>Hindi</td> <!-- hindi -->
                <td>English</td> <!-- english -->
            </tr>
            <tr>
                <td class="ID"><input type="text" name="student_id" required> </td>
                <td class="telugu"><input type="number" min="0" max="25" name="tel" required></td>
                <td class="hindi"><input type="number" min="0" max="25" name="hin" required></td>
                <td class="english"><input type="number" min="0" max="25" name="eng" required></td>
            </tr>
        </table>
        <br>
        <button type="submit" class="submit-marks">Submit</button>
    </form>
</div>

<br><br><br>
<%- include('../public/teacher_page/teacher_footer.ejs') %>


<style>
    .unit-test-form-card {
    background-color: #ffffff;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 20px;
    margin: 0 auto;
    max-width: 600px;
}

.unit-test-form-card h1 {
    text-align: center;
    margin-bottom: 20px;
}

.unit-test-form-table {
    width: 100%;
    border-collapse: collapse;
}

.unit-test-form-table th, .unit-test-form-table td {
    padding: 10px;
    border-bottom: 1px solid #ccc;
    text-align: center;
}

.unit-test-form-table th {
    background-color: #f2f2f2;
}

.unit-test-form-table td input[type="text"],
.unit-test-form-table td input[type="number"] {
    width: 100%;
    padding: 8px;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-sizing: border-box;
}

.submit-marks {
    display: block;
    width: 100%;
    padding: 10px;
    background-color: #007bff;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.submit-marks:hover {
    background-color: #0056b3;
}

</style>